<div class="card shadow" style="width:107%">
  <div class="card-header maroon-header">
    Your Jobs
  </div>

  <ul class="nav nav-tabs mb-3", role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active" id="complete-tab" data-toggle="tab" href="#complete-tab-content" role="tab" aria-controls="complete-tab-content" aria-selected="true">Complete Jobs</a>
    </li>

    <li class="nav-item" role="presentation">
      <a class="nav-link" id="current-tab" data-toggle="tab" href="#current-tab-content" role="tab" aria-controls="current-tab-content" aria-selected="false">Current Jobs</a>
    </li>
  </ul>


  <div class="tab-content" id="job-content">
    <div class="tab-pane fade show active" id="complete-tab-content" role="tabpanel" aria-labelledby="complete-tab">
      <div class="card-body table-responsive p-0">
        <table id="completed_table" class="table">
          <thead>
            <tr>
              <th>Job ID</th>
              <th>Name</th>
              <th>CPUS</th>
              <th>Walltime</th>
              <th>State</th>
              <th></th>
            </tr>
          </thead>
        </table>
      </div>
    </div>

    <div class="tab-pane fade" id="current-tab-content" role="tabpanel" aria-labelledby="current-tab">
      <div class="card-body table-responsive p-0">
        <table id="job_table" class="table">
          <thead>
            <tr>
              <th>Job ID</th>
              <th>Name</th>
              <th>State</th>
              <th>Partition</th>
              <th>Walltime</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
        </table>
      </div>
    </div>
  </div>
  <!-- /.card-body -->
  <div class="card-footer">
  <div>
    <a target="_blank" role="button" class="btn btn-primary maroon-button" href='<%= url("/jobs/composer") %>'>Job Composer</a>
    <span><button type="button" class="btn btn-primary maroon-button" id='refresh-job-table-button' onclick='load_job_table()'>Refresh</button></span>
    <span style="display: none;" id='refresh-job-table-button-spinner' class="spinner-border" role="status"></span>
  </div>
  </div>
</div>
<!-- /.card -->
