<div class="card shadow">
  <div class="card-body">
    <div class="chart-loading-indicator row">
      <div class="col">
        <!-- Spinner -->
        <div class="d-flex justify-content-center">
          <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col" style="width: 50%; display:inline; float: left; position: relative">
        <canvas id="node_utilization_chart"></canvas>
      </div>
      <div class="col" style="width: 50%; display:inline; float: left; position: relative">
        <canvas id="core_utilization_chart"></canvas>
      </div>
      <br>
      <div style="text-align: center">
        <img src="<%= url("/images/clusterStatsLegend.png") %>" alt="" style="width: 75%">
      </div>
    </div>

    <div class="chart-loading-indicator row">
      <div class="col">
        <!-- Spinner -->
        <div class="d-flex justify-content-center">
          <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
          </div>
        </div>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col">
        <div class="card-header maroon-header">
        Queue Availability
        </div>
        <table id="sinfo_table" class="table">
          <thead>
            <tr>
              <th>Queue</th>
              <th>Nodes Avail</th>
              <th>CPU Avail</th>
            </tr>
          </thead>
        </table>
      </div>
    </div>

    <div class="chart-loading-indicator row">
      <div class="col">
        <!-- Spinner -->
        <div class="d-flex justify-content-center">
          <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
